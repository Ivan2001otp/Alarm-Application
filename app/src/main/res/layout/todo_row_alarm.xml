<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="4dp"
    android:layout_marginTop = "6dp"
    android:layout_marginStart="3dp"
    android:layout_marginEnd="3dp"
    android:layout_marginBottom="6dp"
    android:id="@+id/row_parent_layout"
    android:background="@drawable/round_corners"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        android:outlineAmbientShadowColor="@color/cardview_shadow_end_color"
        android:backgroundTint="@color/cardview_shadow_end_color"
        app:cardCornerRadius="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">



            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/row_hour"
                    android:text="08"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_marginTop="14dp"
                    android:layout_marginStart="8dp"
                    android:textSize="35sp"
                    />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text=":"
                android:textColor="@color/white"
                android:layout_marginStart="8dp"
                android:textSize="35sp"
                android:layout_gravity="center"
                android:layout_marginTop="14dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="18"
                android:textColor="@color/white"
                android:id="@+id/row_minute"
                android:layout_marginTop="14dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:textSize="35sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/meridian"
                android:text="AM"
                android:textColor="@color/white"
                android:layout_marginStart="8dp"
                android:textSize="22sp"
                android:layout_marginTop="34dp"

                />


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginStart="40dp"
                android:layout_height="wrap_content">

                <Switch
                    android:id="@+id/setAlarmSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="30dp"
                    />

                <ImageView
                    android:id="@+id/deleteBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="20dp"
                    android:layout_marginVertical="20dp"
                    android:src="@drawable/dustbin"
                    app:layout_constraintEnd_toEndOf="parent" />

            </LinearLayout>



<!--            <ImageView-->
<!--                android:id="@+id/setAlarmImg"-->
<!--                android:layout_width="40dp"-->
<!--                android:layout_marginVertical="20dp"-->
<!--                android:layout_marginStart="60dp"-->
<!--                android:layout_gravity="center"-->
<!--                android:layout_height="40dp"-->
<!--                android:layout_marginEnd="20dp"-->
<!--                android:layout_below="@id/cardView"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:src="@drawable/alarm_clock"-->

<!--                />-->






        </LinearLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>